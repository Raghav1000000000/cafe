{
  "preset": null,
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/tests/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
  "testTimeout": 10000,
  "transform": {},
  "transformIgnorePatterns": [
    "node_modules/(?!(supertest)/)"
  ]
}